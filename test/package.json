{
  "name": "transaction-notary-test",
  "version": "0.1.0",
  "scripts": {
    "tsc": "tsc --skipLibCheck",
    "build": "npm run tsc && node ./tools/post-build.js",
    "compile": "cd ../bin/test && npm install && npm install ../eth-transaction-proxy",
    
    "test-all": "npm run test-source-all && npm run test-api-all",
    "test-api-all": "npm run test-api-contractRepo && npm run test-api-transactionNotary",
    "test-api-transactionNotary": "mocha ./api.transactionNotary/spec.js --exit --timeout 10000",
    "test-api-contractRepo": "mocha ./api.contractRepo/spec.js --exit --timeout 10000",

    "test-source-all": "npm run test-source-folder && npm run test-source-blob",
    "test-source-folder": "mocha ./source.folder/spec.js --exit --timeout 10000",
    "test-source-blob": "mocha ./source.blob/spec.js --exit --timeout 10000",

    "test-all-ci": "npm run test-source-folder-ci && npm run test-api-contractRepo-ci && npm run test-api-transactionNotary-ci",
    "test-api-contractRepo-ci": "mocha ./api.contractRepo/spec.js --exit --timeout 10000 --reporter mocha-junit-reporter --reporter-options mochaFile=./api.contractRepo-results.xml",
    "test-api-transactionNotary-ci": "mocha ./api.transactionNotary/spec.js --exit --timeout 10000 --reporter mocha-junit-reporter --reporter-options mochaFile=./api.transactionNotary-results.xml",
    "test-source-folder-ci": "mocha ./source.folder/spec.js --exit --timeout 10000 --reporter mocha-junit-reporter --reporter-options mochaFile=./api.folder-results.xml"
  },
  "dependencies": {
    "@types/find": "^0.2.1",
    "@types/ganache-core": "^2.1.1",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^5.2.5",
    "@types/ncp": "^2.0.1",
    "@types/request": "^2.48.1",
    "@types/rimraf": "^2.0.2",
    "@types/web3": "1.0.12",
    "azure-storage": "^2.10.2",
    "child_process": "^1.0.2",
    "find": "^0.2.9",
    "ganache-core": "^2.2.1",
    "har-validator": "^5.1.3",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "ncp": "^2.0.0",
    "npm-run": "^5.0.1",
    "request": "^2.88.0",
    "rimraf": "^2.6.2",
    "truffle": "^4.1.14",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedarray-to-buffer": "^3.1.5",
    "typescript": "^3.1.3",
    "web3": "^1.0.0-beta.36",
    "yaeti": "^1.0.2"
  }
}
